# Environment variables for local development
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgresql://ai_stress_user:dev_password_change_in_prod@localhost:5432/ai_stress
TIMESCALE_URL=postgresql://ai_stress_user:dev_password_change_in_prod@localhost:5433/ai_stress_timeseries

# Redis
REDIS_URL=redis://:dev_password_change_in_prod@localhost:6379/0

# JWT
JWT_SECRET=dev_jwt_secret_change_in_prod_use_strong_random_string
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ai-stress-knowledge-base

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_MODELS=ai-stress-ml-models

# SSO Providers
OKTA_DOMAIN=your-domain.okta.com
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret

AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@ai-stress-platform.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Application
NODE_ENV=development
PORT=3000
API_PORT=8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# ML Model
MODEL_VERSION=v1.0.0
MODEL_PATH=/app/models
INFERENCE_BATCH_SIZE=32
GPU_ENABLED=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3005

# Feature Flags
FEATURE_AI_ASSISTANT=true
FEATURE_STRESS_GAMES=true
FEATURE_HR_DASHBOARD=true
FEATURE_API_ACCESS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
